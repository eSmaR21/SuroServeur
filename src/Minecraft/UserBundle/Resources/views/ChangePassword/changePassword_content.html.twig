{% form_theme form 'MinecraftUserBundle:Form:bootstrap.html.twig' %}

<form class="form-horizontal" action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
	<legend>{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</legend>

	{{ form_row(form.current_password, { 'label_attr': {'class':'control-label'} }) }}
	{{ form_row(form.new) }}

	<div class="control-group">
		<div class="controls">
			<button type="submit" class="btn">{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}</button>
		</div>
	</div>

	{{ form_rest(form) }}
	
</form>
