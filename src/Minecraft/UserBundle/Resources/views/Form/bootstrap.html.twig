{% block form_row %}
	{% spaceless %}
		<div class="control-group">
			{{ form_label(form) }}
			<div class="controls">
				{{ form_widget(form) }}
				{{ form_errors(form) }}
			</div>
		</div>
	{% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
	{% spaceless %}
		{% if errors|length > 0 %}
			{% for error in errors %}
				<span class="text-error" style="margin-left: 10px">{{ error.message }}</span>
			{% endfor %}
		{% endif %}
	{% endspaceless %}
{% endblock form_errors %}
