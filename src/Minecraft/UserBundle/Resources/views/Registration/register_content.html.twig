{% form_theme form 'MinecraftUserBundle:Form:bootstrap.html.twig' %}

<form class="form-horizontal" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
	<legend>{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</legend>

	{{ form_row(form.username, { 'label_attr': {'class':'control-label'} }) }}
	{{ form_row(form.email, { 'label_attr': {'class':'control-label'} }) }}
	{{ form_row(form.plainPassword) }}
	{{ form_row(form.usernameMinecraft, { 'label_attr': {'class':'control-label'} }) }}

	<div class="control-group">
		<div class="controls">
			<button type="submit" class="btn">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
		</div>
	</div>

	{{ form_rest(form) }}
	
</form>
